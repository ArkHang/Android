<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/commit"
                android:layout_gravity="right"
                android:text="发布"
                style="@style/tvBottomStyle"></Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="名 称:"
                    style="@style/tvUserInfoStyle"
                    android:gravity="center"></TextView>
                <EditText
                    android:id="@+id/video_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:hint="请输入名称"
                    ></EditText>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="关键字"
                android:gravity="center"
                style="@style/tvUserInfoStyle"></TextView>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_keySelected"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"></TextView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ToggleButton
                    android:id="@+id/tb_btn1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="动漫"
                    android:textOff="动漫"></ToggleButton>

                <ToggleButton
                    android:id="@+id/tb_btn2"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="搞笑"
                    android:textOff="搞笑"></ToggleButton>

                <ToggleButton
                    android:id="@+id/tb_btn3"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="鬼畜"
                    android:textOff="鬼畜"></ToggleButton>

                <ToggleButton
                    android:id="@+id/tb_btn4"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="影视"
                    android:textOff="影视"></ToggleButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="horizontal"
                android:gravity="center">
                <ToggleButton
                    android:id="@+id/tb_btn5"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="自然"
                    android:textOff="自然"></ToggleButton>

                <ToggleButton
                    android:id="@+id/tb_btn6"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="治愈"
                    android:textOff="治愈"></ToggleButton>

                <ToggleButton
                    android:id="@+id/tb_btn7"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="学习"
                    android:textOff="学习"></ToggleButton>

                <ToggleButton
                    android:id="@+id/tb_btn8"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textOn="音乐"
                    android:textOff="音乐"></ToggleButton>
            </LinearLayout>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="简  述"
                style="@style/tvUserInfoStyle"></TextView>
            <EditText
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:id="@+id/et_js"
                android:scrollbars="vertical"
                android:hint="请输入文本"></EditText>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/upload_vedio"
                android:text="上传"
                style="@style/tvBottomStyle"></Button>
            <ImageView
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:id="@+id/iv"
                android:layout_gravity="center"
                ></ImageView>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
