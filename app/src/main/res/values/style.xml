<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
<!--    注册用框-->
    <style name="etRegisterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#a3a3a3</item>
        <item name="android:textSize">14sp</item>
    </style>
<!--    注册按钮-->
    <style name="btnRegisterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:background">@drawable/register_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
<!--登录样式-->
    <style name="tvLoginStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="rlBottomStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 底部导航栏文本样式 -->
    <style name="tvBottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 底部导航栏图片样式 -->
    <style name="ivBottomStyle">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 灰色分割线的样式 -->
    <style name="vMyinfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E3E3E3</item>
    </style>

    <!-- 条目布局样式 -->
    <style name="rlMyinfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- 条目左侧图标样式 -->
    <style name="ivMyinfoLeftStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 条目文本样式 -->
    <style name="tvMyinfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#A3A3A3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center_vertical</item> <!-- 使内容在垂直方向居中对齐 -->
    </style>



    <!-- 条目右侧图标样式 -->
    <style name="ivMyinfoRightStyle">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/iv_right_arrow</item>
    </style>

    <style name="tvFindPswStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 用户信息项的通用布局样式 -->
    <style name="rlUserInfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <!-- 文本视图样式，用于显示标签，如“用户名”、“性别”等 -->
    <style name="tvUserInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 文本视图样式，用于显示信息的值，如用户名、昵称等 -->
    <style name="tvValueUserInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#a3a3a3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/white</item> <!-- 深灰色 -->
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 背景颜色 -->
        <item name="android:windowBackground">#00000000</item>
        <!-- 边距 -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <!-- 圆角 -->
        <item name="android:background">@drawable/dialog_background</item>
        <!-- 标题颜色 -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- 按钮样式 -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton.Negative</item>
        <!-- 分隔线颜色 -->
        <item name="android:divider">#8a8a8a</item>
    </style>

    <!-- 正面按钮样式 -->
    <style name="AlertDialogButton.Positive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/button_positive_background</item>
    </style>

    <!-- 负面按钮样式 -->
    <style name="AlertDialogButton.Negative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#94BA22</item>
        <item name="android:background">@drawable/button_negative_background</item>
    </style>

</resources>